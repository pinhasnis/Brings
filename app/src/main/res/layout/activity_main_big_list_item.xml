<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clickable="false"
    android:contextClickable="false">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/landscape_filled_25"
        android:id="@+id/iv_ambli_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/tv_name"
        android:paddingTop="10dp"
        android:id="@+id/tv_ambli_name"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_ambli_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="date+time"
        android:id="@+id/tv_ambli_date"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_ambli_name"
        android:layout_alignLeft="@+id/tv_ambli_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="location"
        android:id="@+id/tv_ambli_location"
        android:layout_below="@+id/tv_ambli_date"
        android:layout_alignLeft="@+id/tv_ambli_date"
        android:layout_alignStart="@+id/tv_ambli_date"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="attending"
        android:id="@+id/tv_ambli_attending"
        android:layout_toEndOf="@+id/tv_ambli_date"
        android:layout_alignLeft="@+id/tv_ambli_name"
        android:layout_below="@+id/tv_ambli_location"
        android:layout_marginTop="15dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ib_ambli_google_maps"
        android:layout_alignBottom="@+id/tv_ambli_location"
        android:layout_toRightOf="@+id/tv_ambli_location"
        android:layout_marginLeft="15dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ib_ambli_navigate"
        android:layout_toEndOf="@+id/ib_ambli_google_maps"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/tv_ambli_location"
        android:layout_toRightOf="@+id/ib_ambli_google_maps" />

</RelativeLayout>
